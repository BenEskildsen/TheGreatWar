<% provide(:title, 'All users') %>
<h1>All users</h1>

<%= will_paginate %>

<ul class="users">
  <% @users.each do |user| %>
    <li>
      <%= gravatar_for user%>
      <%= link_to user.name, user %>
      <% if logged?(user) %>
        <%= "Logged On" %>
      <% else %>
        <%= "Logged Off" %>

      <% end %>
    </li>
  <% end %>
</ul>

<%= will_paginate %>