<!-- <header class="navbar navbar-fixed-top navbar-inverse"> -->
<header class="website-title"">
  <div class="container">
    <%= link_to "The Great War", root_path, id: "logo" %>
    <nav>
      <!-- <ul class="nav navbar-nav navbar-right"> -->
      <ul class="nav">
        <li><%= link_to "Home", root_path %></li>
        <!-- Display Users and dropdown menu if the user is logged in,
        otherwise, we display a Log-in option -->
        <% if logged_in? %>
          <li><%= link_to "Lobby", lobby_path %></li>
          <li><%= link_to "Users", all_path %></li>
          <li><%= link_to "Help", help_path %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Account <b class="caret"></b>
            </a>
            <!-- <ul class="dropdown-menu"> -->
            <ul class="dropdown">
              <li><%= link_to "Profile", current_user %></li>
              <li><%= link_to "Settings", edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Log out", logout_path, method: "delete" %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "Log in", login_path %></li>
          <li><%= link_to "Help", help_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
