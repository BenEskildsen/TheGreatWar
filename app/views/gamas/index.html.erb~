<% provide(:title, 'All Games') %>
<h1>All Games</h1>

<ul class="games">
  <% @games.each do |game| %>
    <li>
      <%= link_to game.name, :controller => 'games', :action => 'show', :id => game.id, :join => 0 %>
        <% if game_pending?(game) %>
          <strong>Game is Pending. Would you like to
          <%= link_to 'join?', :controller => 'games', :action => 'show', :id => game.id, :join => 1 %></strong> 
        <% else %>

          <% if game_done?(game) %>
            <strong>Game is Over.</strong> 
          <% else %>
            <strong> Game is on-going.</strong>
          <% end %> 
        <% end %>
        <br></br>
    </li>
  <% end %>
</ul>

<%= link_to 'Create Game', new_game_path %>